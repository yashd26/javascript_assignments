<!-- Task5 -->
<!DOCTYPE HTML>
<html>
  <head>
    <script>
      const n = prompt("Enter the val of n: ", 0);
      for(let i = 1; i <= n; ++i) {
        for(let j = 1; j <= n; ++j) {
            if (j < i) {
              document.write('&nbsp;');
            }
            else {  
                document.write(j);
                document.write('&nbsp;');
            }
        }

        document.write("<br>");
      }
      
      for(let i = n; i > 1; --i) {
        for(let j = 1; j <= n; ++j) {
            if (j >= i - 1) {
                document.write(j);
                document.write('&nbsp;');
            }
            else {  
              document.write('&nbsp;');
            }
        }

        document.write("<br>");
      }
    </script>
  </head>
</html>